# Copy this file to backend.tf and configure with your S3 bucket details
# Rename: cp backend.tf.example backend.tf

terraform {
  backend "s3" {
    bucket         = "your-terraform-state-bucket-name"
    key            = "staging/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "terraform-state-lock"
  }
}

