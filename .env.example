# ============================================
# Nexus Learn - Environment Variables Example
# ============================================
# Copy this file to .env and update with your values
# cp .env.example .env

# Django Configuration
DJANGO_SECRET_KEY=django-insecure-change-this-in-production-please-use-strong-secret-key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# PostgreSQL Database Configuration
POSTGRES_DB=nexus_db
POSTGRES_USER=nexus_user
POSTGRES_PASSWORD=nexus_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Neo4j Graph Database Configuration
# For Docker Compose (internal network): use bolt://neo4j:7687
# For local connection (outside Docker): use bolt://localhost:7687
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password

# Vector Store Configuration
# Model options: all-MiniLM-L6-v2 (384 dims), all-mpnet-base-v2 (768 dims)
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# AWS Configuration (Optional - for Terraform/Infrastructure)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_REGION=ap-southeast-1

# Terraform Configuration (Optional)
TF_LOG=
TF_LOG_PATH=/terraform/terraform.log
