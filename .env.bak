# ============================================
# Nexus Learn - Local Development Environment
# ============================================
ENVIRONMENT=local

# Django Configuration
DJANGO_SECRET_KEY=django-insecure-local-dev-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,*.localhost

# PostgreSQL Database Configuration
POSTGRES_DB=nexus_db_local
POSTGRES_USER=nexus_user
POSTGRES_PASSWORD=nexus_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Neo4j Graph Database Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password_local

# Vector Store Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# AWS Configuration (Not used in local)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_REGION=ap-southeast-1

# Terraform Configuration
TF_LOG=DEBUG
TF_LOG_PATH=/terraform/terraform.log

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=logs/nexus_learn_local.log

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_SECURE=False
